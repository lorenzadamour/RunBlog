{% trans_default_domain 'FOSUserBundle' %}

<div class="form">

  <ul class="tab-group">
    <li class="tab active"><a href="#signup">S'inscrire</a></li>
    <li class="tab"><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
  </ul>

  <div class="tab-content">
    <div id="signup">
      <h1>INSCRIPTION</h1>


        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}

      <div class="top-row">
        <div class="field-wrap form-group">
          {{ form_widget(form.username, {'attr': {'placeholder':'Pseudo'}}) }}
        </div>

        <div class="field-wrap form-group">
         {{ form_widget(form.email, {'attr': {'placeholder':'Email'}}) }}
        </div>

      <div class="field-wrap form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'Mot de passe'}}) }}
        {{ form_errors(form.plainPassword.first) }}
      </div>

      <div class="field-wrap form-group">
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'VÃ©rification mot de passe'}}) }}
        {{ form_errors(form.plainPassword.second) }}
      </div>

      <button type="submit" class="button button-block"/>Envoyer</button>
    </div>

      {{ form_end(form) }}

    </div>

    <div id="login">
      <h1>Welcome Back!</h1>

      <form action="/" method="post">

        <div class="field-wrap">
        <label>
          Email Address<span class="req">*</span>
        </label>
        <input type="email"required autocomplete="off"/>
      </div>

      <div class="field-wrap">
        <label>
          Password<span class="req">*</span>
        </label>
        <input type="password"required autocomplete="off"/>
      </div>

      <p class="forgot"><a href="#">Forgot Password?</a></p>

      <button class="button button-block"/>Log In</button>

      </form>

    </div>

  </div><!-- tab-content -->

</div> <!-- /form -->
